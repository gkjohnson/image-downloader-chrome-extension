{
  // Manifest Version
  "manifest_version": 2,

  // Extension Description
  "name": "Bulk Image Downloader",
  "description": "Downloads a set of images from a webpage",
  "version": "2",

  "permissions": 
  [
    "downloads","tabs"
  ],

  "icons": 
  {
    "16": "icon128.png",
    "48": "icon128.png",
    "128": "icon128.png"
  },

  // Page Action Definition
  "browser_action" :
  {
    "default_title" : "Download Image Set",
    "default_popup" : "download_popup.html",
    "default_icon"  : "icon.png"
  },

  // Background Logic Definition
  "background": 
  {
    "scripts" : ["background.js"]
  },

  // Accessible Resources Definition
  "web_accessible_resources":
  [
    "jquery.js",
    "helpers.js"
  ],

  // Injected Scripts
  "content_scripts":
  [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery.js","helpers.js","content_script.js"]
    }
  ]
}